 <!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Letter Sound Match Game</title>
  <style>
    body {
      font-family: sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      background: #f5f5f5;
    }
    .game-board {
      display: grid;
      grid-template-columns: repeat(5, 100px);
      gap: 10px;
    }
    .card {
      width: 100px;
      height: 100px;
      background: #fff;
      border: 2px solid #ccc;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: pointer;
      font-size: 24px;
    }
    .matched {
      background: #d4edda;
      border-color: #28a745;
    }
    #message {
      margin-top: 20px;
      font-size: 20px;
      color: #333;
    }
    #counter {
      margin-bottom: 20px;
      font-size: 18px;
    }
  </style>
</head>
<body>
  <div id="counter">Turns: 0</div>
  <div class="game-board" id="gameBoard"></div>
  <div id="message"></div>

  <script>
    const sounds = {
      'AH': new Audio('short-a.mp3'),
      'EH': new Audio('short-e.mp3'),
      'IH': new Audio('short-i.mp3'),
      'AW': new Audio('short-o.mp3'),
      'UH': new Audio('short-u.mp3'),
      'AY': new Audio('long-a.mp3'),
      'EE': new Audio('long-e.mp3'),
      'EYE': new Audio('long-i.mp3'),
      'OH': new Audio('long-o.mp3'),
      'YOU': new Audio('long-u.mp3')
    };

    const cards = [
      { label: 'AH' }, { label: 'AH' },
      { label: 'EH' }, { label: 'EH' },
      { label: 'IH' }, { label: 'IH' },
      { label: 'AW' }, { label: 'AW' },
      { label: 'UH' }, { label: 'UH' },
      { label: 'AY' }, { label: 'AY' },
      { label: 'EE' }, { label: 'EE' },
      { label: 'EYE' }, { label: 'EYE' },
      { label: 'OH' }, { label: 'OH' },
      { label: 'YOU' }, { label: 'YOU' }
    ];

    const shuffled = [...cards].sort(() => 0.5 - Math.random());
    const board = document.getElementById('gameBoard');
    const counter = document.getElementById('counter');
    const message = document.getElementById('message');

    let firstCardElement = null;
    let secondCardElement = null;
    let firstCardLabel = null;
    let secondCardLabel = null;
    let turns = 0;
    let matches = 0;

    shuffled.forEach(card => {
      const div = document.createElement('div');
      div.className = 'card';
      div.textContent = '?';
      div.dataset.label = card.label;

      div.addEventListener('click', () => {
        if (div.classList.contains('matched') || div === firstCardElement || secondCardElement) return;
        div.textContent = div.dataset.label;
        sounds[div.dataset.label]?.play();

        if (!firstCardElement) {
          firstCardElement = div;
          firstCardLabel = div.dataset.label;
        } else {
          secondCardElement = div;
          secondCardLabel = div.dataset.label;
          turns++;
          counter.textContent = `Turns: ${turns}`;

          if (firstCardLabel === secondCardLabel) {
            firstCardElement.classList.add('matched');
            secondCardElement.classList.add('matched');
            matches++;
            if (matches === cards.length / 2) {
              message.textContent = "ðŸŽ‰ You matched them all! Great job!";
            }
            firstCardElement = null;
            secondCardElement = null;
          } else {
            setTimeout(() => {
              if (firstCardElement && secondCardElement) {
                firstCardElement.textContent = '?';
                secondCardElement.textContent = '?';
              }
              firstCardElement = null;
              secondCardElement = null;
            }, 1000);
          }
        }
      });

      board.appendChild(div);
    });
  </script>
</body>
</html>
